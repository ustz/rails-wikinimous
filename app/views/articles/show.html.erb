<div class="container">
  <h1><%= @article.title %></h1>
  <%= Kramdown::Document.new(@article.content).to_html.html_safe %>
  <br>
  <%= link_to "Back", root_path, class: 'btn btn-primary' %>
  <%= link_to "Edit", edit_article_path(@article), class: 'btn btn-success' %>
  <%= link_to "Delete", article_path(@article), method: 'delete', class: 'btn btn-danger' %>
</div>

